{
    "name": "luthfisolahudin/vanilla-php-framework",
    "description": "Minimal PHP Framework Concept",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Luthfi Solahudin",
            "email": "mluthfisk@outlook.com"
        }
    ],
    "require": {
        "php": "^8",
        "ext-pdo": "*",
        "ext-spl": "*"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "kint-php/kint": "^5.1",
        "kint-php/kint-helpers": "^5.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "app",
            "Sys\\": "sys/src"
        },
        "files": [
            "sys/functions.php",
            "app/functions.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        },
        "optimize-autoloader": true,
        "platform-check": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "forward-command": false
        }
    },
    "scripts": {
        "cs": "@php vendor-bin/php-cs-fixer/vendor/bin/php-cs-fixer",
        "cs:check": "@composer run cs -- fix --dry-run --diff",
        "normalize": "@composer bin composer-normalize normalize ../../composer.json",
        "scan-ext": "@php vendor-bin/php-code-analyzer/vendor/bin/phpca",
        "unused": "@php vendor-bin/composer-unused/vendor/bin/composer-unused"
    }
}
