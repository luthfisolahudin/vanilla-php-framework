{
    "name": "luthfisolahudin/vanilla-php-framework",
    "description": "Minimal PHP Framework Concept",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Luthfi Solahudin",
            "email": "luthfisolahudin@outlook.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-session": "*",
        "ext-spl": "*"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8",
        "kint-php/kint": "^5.1",
        "kint-php/kint-helpers": "^5.0"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        },
        "optimize-autoloader": true,
        "platform-check": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "forward-command": false
        }
    },
    "scripts": {
        "cs": "@php vendor-bin/php-cs-fixer/vendor/bin/php-cs-fixer",
        "cs:check": "@cs fix --dry-run --diff"
    }
}
